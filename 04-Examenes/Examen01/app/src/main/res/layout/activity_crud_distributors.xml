<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_distributor_crud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DistributorsCrud">

    <Button
        android:id="@+id/btn_create_distributor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <EditText
        android:id="@+id/input_name_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_address_d"
        app:layout_constraintEnd_toEndOf="@+id/input_address_d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_address_d" />

    <EditText
        android:id="@+id/input_phone_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese el teléfono"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_email_d"
        app:layout_constraintEnd_toEndOf="@+id/input_email_d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_email_d" />

    <EditText
        android:id="@+id/input_email_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Ingrese el email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_distributor"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_distributor"
        app:layout_constraintStart_toStartOf="@+id/btn_create_distributor" />

    <EditText
        android:id="@+id/input_address_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese la dirección"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_phone_d"
        app:layout_constraintEnd_toEndOf="@+id/input_phone_d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_phone_d" />

    <TextView
        android:id="@+id/txtV_distributor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distributor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/btn_update_distributor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_distributor"
        app:layout_constraintStart_toStartOf="@+id/btn_create_distributor"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_distributor" />

</androidx.constraintlayout.widget.ConstraintLayout>